@model BitsolMeritInSchoolSystem.Models.ClassSection

@{
    ViewBag.Title = "Create";
    if (Session["Email"] == null)
    {

        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {

        Layout = "~/Views/Shared/_Layout2.cshtml";
    }
}

<h2>Add Section In Class</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ClassSection</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group" id="ClassDiv">
            <label class="col-md-2">Class</label>
            <div class="col-md-10">
                @Html.DropDownList("ClassId", null, "Select Class", new { @class = "form-control" })


            </div>
        </div>

        <div class="form-group" id="SectionDiv">

            <label class="col-md-2">Section</label>
            <div class="col-md-10 ">

                @Html.DropDownList("SectionId", null, "Select Section", new { @class = "form-control" })

            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div style="margin-left:32%;" class="col-lg-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

                <div class="col-lg-3">
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
                </div>
            </div>

        </div>

    </div>
}

