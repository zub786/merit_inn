@model BitsolMeritInSchoolSystem.Models.ClassSection

@{
    ViewBag.Title = "Edit";
    if (Session["Email"] == null)
    {

        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {

        Layout = "~/Views/Shared/_TeacherLayout2.cshtml";
    }
}

<h2>Edit</h2>
<div class="row">

    <div class="col-md-9">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>ClassSection</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ClassSectionId)

                <div class="form-group">
                    @Html.LabelFor(model => model.ClassId, "ClassId", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ClassId", null, "Select Class", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ClassId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SectionId, "SectionId", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("SectionId", null, "Select Section", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SectionId)
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-9">
                        <div class="col-md-2">

                        </div>
                        <div class="col-md-3">
                            <input type="submit" value="Save" class="btn btn-default btn-success" />
                        </div>

                        <div class="col-md-3">
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>

