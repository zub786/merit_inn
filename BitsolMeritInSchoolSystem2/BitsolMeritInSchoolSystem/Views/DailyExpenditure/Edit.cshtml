@model BitsolMeritInSchoolSystem.Models.DailyExpenditure

@{
    ViewBag.Title = "Edit";
    if (Session["Email"] == null)
    {

        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {

        Layout = "~/Views/Shared/_TeacherLayout2.cshtml";
    }
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-9">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>DailyExpenditure</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.DailyExpenditureId)

                <div class="form-group">
                    @Html.LabelFor(model => model.ExpenditureDescription, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.ExpenditureDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ExpenditureDescription)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ExpenditureAmount, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.ExpenditureAmount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ExpenditureAmount)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Date, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Date)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9">
                        <div class="col-md-4">

                        </div>
                        <div class="col-md-3">
                            <input type="submit" value="Save" class="btn btn-default btn-success" />
                        </div>

                        <div class="col-md-2">
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script>
    $("#Date").datepicker({
        changeMonth: true,
        changeYear: true
    });
</script>