@model BitsolMeritInSchoolSystem.Models.DailyExpenditure

@{
    ViewBag.Title = "Create";
    if (Session["Email"] == null)
    {

        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {

        Layout = "~/Views/Shared/_Layout2.cshtml";
    }

}

<h2>Expenditure Entry</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ExpenditureDescription, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.ExpenditureDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ExpenditureDescription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExpenditureAmount, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.ExpenditureAmount, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ExpenditureAmount)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Date, new { @class = "control-label col-md-3" })*@
            <div class="col-md-9">
                @*@Html.EditorFor(model => model.Date)*@

                <input type="text" name="Date" id="Date" value="@DateTime.Now" hidden/>
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div style="margin-left:32%;" class="col-lg-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

                <div class="col-lg-3">
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
                </div>
            </div>

        </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
