@model BitsolMeritInSchoolSystem.Models.User

@{
    ViewBag.Title = "Create";
    if (Session["Email"] == null)
    {

        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {

        Layout = "~/Views/Shared/_Layout2.cshtml";
    }
}

<h2>New User Login</h2>
<div class="row">
    <div class="col-md-9">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>User</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UserRole, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.HiddenFor(model => model.UserRole)

                        <input name="Role" type="radio" value="1" title="Administrator" /> Administrator<br />
                        <input name="Role" type="radio" value="2" title="Teacher" /> Teacher

                        @Html.ValidationMessageFor(model => model.UserRole)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9">
                        <div class="col-md-4">

                        </div>
                        <div class="col-md-3">
                            <input type="submit" value="Save" class="btn btn-default btn-success" />
                        </div>

                        <div class="col-md-2">
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>

            </div>
        }

    </div>
</div>

<script>
    $("input[name='Role']").change(function () {

        var radioValue = $("input[name='Role']:checked").val();
        $("#UserRole").val(radioValue);


    });
    

</script>